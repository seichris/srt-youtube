{
  "manifest_version": 3,
  "name": "Custom YouTube Subtitles",
  "version": "1.0",
  "description": "Paste SRT subtitles into any YouTube video",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
